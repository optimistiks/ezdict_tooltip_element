<div class="slide-down-btn"><i class="icon-circleup"></i></div>
<div class="counter warning5" title="{{ t 'counterTitle' }}">
  <p id="counter">{{#if translation_history}}{{ translation_history.count }}{{else}}-{{/if}}</p>
</div>
<div class="control-panel left">
  <div class="st-btn-wrap" title="{{ t 'editTranslationTitle' }}">
    <div class="st-btn edit"><i class="icon-pen"></i></div>
  </div>
  <div class="st-btn-wrap" title="{{ t 'addTranslationTitle' }}">
    <div class="st-btn add-new"><i class="icon-createfile"></i></div>
  </div>
  <div class="st-btn-wrap vrashi" title="{{ t 'addToLearningTitle' }}">
    <div class="st-btn add-to-learning">Aa</div>
  </div>
  <div class="st-btn-wrap vrashi" title="{{ t 'likeTitle' }}">
    <div class="st-btn like-it"><i class="icon-thumbs-up"></i></div>
  </div>
  <div class="st-btn-wrap" title="{{ t 'closeTranslationTitle' }}">
    <div class="st-btn close" id="close_sticker"><i class="icon-remove"></i></div>
  </div>
</div>
<div class="sticker-source-wrap">
  <div class="st-source-btn user" title="{{ t 'yourTranslationTitle' }}"><i class="icon-useralt"></i></div>
  <div class="st-source-btn ezdict active" title="{{ t 'ezdictTranslationTitle' }}"><i class="icon-notebook"></i></div>
  <div class="st-source-btn best " title="{{ t 'bestUserTranslationTitle' }}"><i class="icon-star-empty"></i></div>
</div>
<div class="st-translate" id="st_translate">
  <div class="st-source-translate" id="user-sticker"></div>
  <div class="st-source-translate" id="ezdict-sticker">{{ translation }}</div>
  <div class="st-source-translate" id="best-sticker"></div>
</div>
